{
  "info": {
    "name": "Fintech API",
    "_postman_id": "fintech-api-collection",
    "description": "Postman collection for Fintech backend API (auth flows, profile, KYC, admin role)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"John Doe\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","register"]
        }
      }
    },
    {
      "name": "Verify Email",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/auth/verify-email?token={{verificationToken}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","verify-email"],
          "query": [{"key":"token","value":"{{verificationToken}}"}]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type","value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","login"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/refresh",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","refresh"]
        }
      }
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [{"key":"Authorization","value":"Bearer {{accessToken}}"}],
        "url": {
          "raw": "http://localhost:3000/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","profile"]
        }
      }
    },
    {
      "name": "Update Profile",
      "request": {
        "method": "PUT",
        "header": [
          {"key":"Authorization","value":"Bearer {{accessToken}}"},
          {"key": "Content-Type","value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"John Updated\",\n  \"preferences\": {\"currency\": \"USD\"}\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","profile"]
        }
      }
    },
    {
      "name": "Submit KYC",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Authorization","value":"Bearer {{accessToken}}"},
          {"key": "Content-Type","value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"idType\": \"passport\",\n  \"idNumber\": \"A12345678\",\n  \"dob\": \"1990-01-01\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/auth/kyc",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["auth","kyc"]
        }
      }
    },
    {
      "name": "Get All Users (Admin Only)",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{adminAccessToken}}"}
        ],
        "url": {
          "raw": "http://localhost:3000/admin/users",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["admin","users"]
        }
      }
    }
  ]
}
